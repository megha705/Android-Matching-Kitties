<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/heading_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_peach">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:paddingLeft="64dp"
            android:paddingRight="64dp">

            <TextView
                android:id="@+id/Title"
                style="@style/heading_3"
                android:layout_width="wrap_content"
                android:text="Match 'em \nkitties!"
                android:textAlignment="textStart" />

            <TextView
                android:id="@+id/txtCountDown"
                style="@style/heading_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0:00"
                android:textAlignment="textEnd" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imgButton0"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:scaleType="fitStart"
                    android:background="@drawable/kitty_00" />

                <ImageButton
                    android:id="@+id/imgButton1"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:scaleType="fitStart"
                    android:background="@drawable/kitty_00" />

                <ImageButton
                    android:id="@+id/imgButton2"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:scaleType="fitStart"
                    android:background="@drawable/kitty_00" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imgButton3"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:scaleType="fitStart"
                    android:background="@drawable/kitty_00" />

                <ImageButton
                    android:id="@+id/imgButton4"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:scaleType="fitStart"
                    android:background="@drawable/kitty_00" />

                <ImageButton
                    android:id="@+id/imgButton5"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:scaleType="fitStart"
                    android:background="@drawable/kitty_00" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
